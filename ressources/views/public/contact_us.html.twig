{% extends 'defaultLayout.html.twig' %}

{% block stylesheets %}
	{{parent()}}
	<link rel="stylesheet" href="{{asset('css/ajoutArticle.css')}}">
{% endblock %}

{% block header %}
	{% include 'commerce/menu.html.twig' %}
{% endblock %}

{% block contenu %}
	<div class="col-md-9">
		<div class="row">
			{% if  errors is not empty %}
				<div class="alert alert-danger" role=alert>
					{% for value in errors %}
						<p>{{value}}</p><br>
					{% endfor %}
				</div>

				<br>
			{% endif %}

			{% if success is defined %}
				<div class="alert alert-success" role=alert>
					<p>Votre message a bien été envoyé</p>
				</div><br>
			{% endif %}

			<form class="form-horizontal itemForm" action="" method="POST">
				<fieldset>
					<legend>Nous Contacter</legend>
					<!-- Nom et prenom-->
					<div class="form-group">
						<label class="col-md-4 control-label">Nom</label>
						<div class="col-md-4">
							<input type="text" class="form-control input-md" name="name" required>
						</div>
					</div>

					<div class="form-group">
						<label class="col-md-4 control-label">Prénom</label>
						<div class="col-md-4">
							<input type="text" class="form-control input-md" name="surname" required>
						</div>
					</div>

					<!-- email -->
					<div class="form-group">
						<label class="col-md-4 control-label">Email</label>
						<div class="col-md-4">
							<input type="email" class="form-control" name="email" required>
						</div>
					</div>

					<!-- sujet -->
					<div class="form-group">
						<label class="col-md-4 control-label">Sujet</label>
						<div class="col-md-4">
							<input type="text" class="form-control input-md" name="subject" required>
						</div>
					</div>

					<!-- Message -->
					<div class="form-group">
						<label class="col-md-4 control-label">Message</label>
						<div class="col-md-4">
							<textarea name="message" class="form-control" placeholder="Saisissez votre message" required></textarea>
						</div>
					</div>

					<div class="form-group">
						<div class="col-md-4 col-md-push-3">
							<input  type="submit" class="btn btn-primary" value="Ajouter">
						</div>
					</div>
				</fieldset>
			</form>
		</div>
	</div>
{% endblock %}

{# include footer #}
{% block footer %}
	{% include 'commerce/footer.html.twig' %}
{% endblock %}