{% extends 'defaultLayout.html.twig' %}

{% block stylesheets %}
	{{parent()}}
	<link rel="stylesheet" href="{{asset('css/admin.css')}}">
{% endblock %}

{% block contenu %}
	<br><br><br><br>
	<div class="row">
		{% if success is defined %}
			<div class="alert alert-danger" role=alert>
				<p align="center">{{ success }}</p>
			</div>	
		{% endif %}
		
		{% if products is not empty %}
			<div class="col-md-12">
                <div class="actionbar">
                    <a href="{{ url('addProductAdmin') }}" class="btn btn-primary">Vendre un objet</a>
                    &nbsp;&nbsp;
					<a href="{{ url('accueilAdmin') }}" class="btn btn-default">Retour à l'accueil</a>
				</div>
				<br><br>

				<table class="table table-bordered table-striped table-hover table-condensed table-responsive" width="85%" id="myTable">
					<thead>
						<tr>
							<th width="80"></th>
							<th class="small">Nom ou Modèle</th>
							<th class="small" width="80">Prix (€)</th>
							<th class="small" width="80">Date de création</th>
							<th class="small" width="80">Posté par</th>
							<th class="small" width="80">Action</th>
						</tr>
					</thead>
					<tbody>
						{% for value in products %}
							<tr>
								<td align="center">
									{% if (value.image_1>"") %}
										<img src="{{ asset('assets/images/'~value.image_1) }}" style="width:70px;height:auto;max-height:70px;">
									{% endif %}
								</td>
								<td>{{value.name}}</td>
								<td align="right">{{value.price|number_format(2, '.', ' ')}}</td>
								<td align="center">{{value.creation_date | date('d/m/Y')}}</td>
								<td>{{value.pseudo}}</td>
								<td align="center">
    								<a href="{{ url('addProductAdmin',{'ID_product' : value.ID_product, 'token' : app.session.get('token')}) }}" class="form-control btn btn-warning">Modifier</a>
									<br><br>
									<form action="{{ url('deleteProductAdmin') }}"  method="post">
										<input type="hidden" name="ID_product" value="{{value.ID_product}}">
										<input type="hidden" name="token" value="{{app.session.get('token')}}">
										<button onclick="return confirm('êtes vous sûr ??')" class="form-control btn btn-danger" type="submit">Supprimer</button> 								
									</form><br>

								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		{% else %}
			
			<div class="alert alert-warning" role=alert>
				<p>Vous n'avez pas encore de produits à afficher</p>
			</div>		

		{% endif %}
	</div>
{% endblock %}



