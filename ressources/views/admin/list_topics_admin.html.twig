{% extends 'defaultLayout.html.twig' %}

{% block stylesheets %}
	{{parent()}}
	<link rel="stylesheet" href="{{asset('css/admin.css')}}">
{% endblock %}

{% block contenu %}
	<br><br><br><br>
	<div class="row">
		{% if success is defined %}
			<div class="alert alert-danger" role=alert>
				<p align="center">{{ success }}</p>
			</div>	
		{% endif %}
		

		{% if topics is not empty %}
			<div class="col-md-12">
                <div class="actionbar">
                    <a href="{{ url('addTopicAdmin') }}" class="btn btn-primary">Publier un topic</a>
                    &nbsp;&nbsp;
					<a href="{{ url('accueilAdmin') }}" class="btn btn-default">Retour à l'accueil</a>
					<br><br>
				</div>
				<table class="table table-bordered table-striped table-hover table-condensed table-responsive" width="85%"  id="myTable">
					<thead>
						<tr>
							<th>Nom du topic</th>
							<th class="small" width="80">Date de création</th>
							<th class="small" width="300">Lien vers le produit ou l'événement associé</th>
							<th class="small" width="80">Pseudo</th>
							<th class="small" width="80">Action</th>
						</tr>
					</thead>
					<tbody>
						{% for value in topics %}
							<tr>
								<td>{{value.title}}</td>
								<td>{{value.creation_date | date('d/m/Y')}}</td>
								<td>
									{% if value.ID_product > 0 %}
										<a href="{{ url('article', {'category_name': value.category_name |lower , 'slugproduct':value.name|slug , 'ID_product':value.ID_product}) }}">Shop - {{ value.name }}</a>
									{% endif %}

									{% if value.ID_event > 0 %}
										<a href="{{ url('agenda_article', {'category_name': value.category_name|lower , 'slugevent':value.event_title|slug , 'ID_event':value.ID_event}) }}">Evénements - {{value.event_title}}</a>
									{% endif %}
									
								</td>
								<td>{{value.pseudo}}</td>
								<td>
									<form action="{{ url('deleteTopicAdmin') }}"  method="post">
										<input type="hidden" name="ID_topic" value="{{value.ID_topic}}">
										<input type="hidden" name="token" value="{{app.session.get('token')}}">
										<button onclick="return confirm('Cette action supprimera le topic et tous les posts associés\r\nêtes-vous sûr ??')" class="for-control btn btn-danger" type="submit">Supprimer</button> 								
									</form>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		{% else %}
			
			<div class="alert alert-warning" role=alert>
				<p>Vous n'avez pas encore de topic à afficher</p>
			</div>		

		{% endif %}
	</div>



{% endblock %}



