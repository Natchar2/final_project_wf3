{% extends 'defaultLayout.html.twig' %}



{% block contenu %}
	<br><br><br><br>
	<div class="row">
		{% if success is defined %}
			<div class="alert alert-danger" role=alert>
				<p>{{ success }}</p>
			</div>	
		{% endif %}
		

		{% if events is not empty %}
			<div class="col-md-12">

				<a href="{{ url('accueilAdmin') }}" class="btn btn-default pull-right">Retour à l'accueil</a>



				<table class="table table-bordered table-striped table-hover table-condensed table-responsive" width="85%" id="myTable">
					<thead>
						<tr>
							<th width="80"></th>
							<th class="small">Nom de l'événement</th>
							<th class="small" width="80">Date d'ajout</th>
							<th class="small" width="80">Date de l'événement</th>
							<th class="small" width="80">Posté par</th>
							<th class="small" width="80">Action</th>
						</tr>
					</thead>
					<tbody>
						{% for value in events %}
							<tr>
								<td align="center">
									{% if (value.image>"") %}
										<img src="{{ asset('assets/images/'~value.image) }}" style="width:70px;height:auto;">
									{% endif %}
								</td>
								<td>{{value.event_title}}</td>

								<td>{{value.creation_date | date('d/m/Y')}}</td>
								<td>{{value.start_date | date('d/m/Y')}}</td>
								<td>{{value.pseudo}}</td>
								<td align="center">
									<a href="{{ url('view_agenda_add',{'ID_event' : value.ID_event, 'token' : app.session.get('token')}) }}" class="form-control btn btn-warning">Modifier</a>
									<br><br>
									<form action="{{ url('deleteEvent') }}"  method="post">
										<input type="hidden" name="ID_event" value="{{value.ID_event}}">
										<input type="hidden" name="token" value="{{app.session.get('token')}}">
										<button onclick="return confirm('êtes vous sûr ??')" class="form-control btn btn-danger" type="submit">Supprimer</button> 								
									</form>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		{% else %}
			
			<div class="alert alert-warning" role=alert>
				<p>Vous n'avez pas encore d'événement à afficher</p>
			</div>		

		{% endif %}
	</div>



{% endblock %}



