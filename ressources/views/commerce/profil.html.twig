{% extends 'defaultLayout.html.twig' %}

{% block stylesheets %}
	{{parent()}}
	<link rel="stylesheet" href="{{asset('css/profil.css')}}">
{% endblock %}

{% block contenu %}

	<div class="container">

		<div class="row">

			<div class="col-xs-12 text-center intro">

				<hr>
				<img class="img-circle img-responsive img-center" src="{{ asset('assets/images/avatar/'~app.user.getAvatar()) }}" alt="avatar">

				<h3>
					{% if userProfil is defined and userProfil is not empty %}
						{{userProfil.pseudo}}
						<small> - {{userProfil.society_name}}</small>
					{% else %}
						<div>Aucun utilisateur ne correspond à votre recherche</div>
					{% endif %}
					<a href="{{ url('list_topics') }}" type="button" class="btn btn-info">Voir ma liste</a>
				</h3>

				<a class="modif" href="{{ url('set_profil',{'token':app.session.get('token')}) }}">Modifier le profil</a>

				<hr>

			</div>

			<div class="col-xs-12 col-md-4">

				<h4>
					{% if topic is defined and topic is not empty %}
						{{topic.category_name}}</h4>
						<hr>
						<p>{{topic.title}}</p>
					{% else %}
						<div>Aucun topic ne correspond à votre recherche</div>
					{% endif %}
					<a href="{{ url('list_topics') }}" type="button" class="btn btn-info">Voir ma liste</a>
				</div>

				<div class="col-xs-12 col-md-4">

					<h4>{% if event is defined and event is not empty %}
						{{event.category_name}}</h4>
						<hr>
						<h5>{{event.event_title}}</h5>

						<p>{{event.event_description | balise | accroche }}</p>

					{% else %}
						<div>Aucun évènement ne correspond à votre recherche</div>
					{% endif %}
					<a href="{{ url('list_events') }}" type="button" class="btn btn-info">Voir ma liste</a>
				</div>

				<div class="col-xs-12 col-md-4">

					<h4>{% if product is defined and product is not empty %}
						{{product.category_name}}</h4>
						<hr>
						<h5>{{product.name}}</h5>
						<p>{{product.description | balise | accroche }}</p>
					{% else %}
						<div>Aucun produit ne correspond à votre recherche</div>
					{% endif %}
					<a href="{{ url('listProducts') }}" type="button" class="btn btn-info">Voir ma liste</a>
				</div>

			</div>
			<br>
		</div>
		<br>

	{% endblock %}

	{# include footer #}
	{% block footer %}
		{% include 'commerce/footer.html.twig' %}
	{% endblock %}

	{% block javascripts %}
		{{ parent() }}
	{% endblock %}