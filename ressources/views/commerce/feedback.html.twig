{% extends 'defaultLayout.html.twig' %}

{% block title %}Feedback{% endblock %}

{% block contenu %}
	<div class="container">
		{% if type is defined %}
			<div class="row" style="margin: 20px 0; box-shadow: 0px 3px 5px black; background: rgb(90, 90, 110); padding: 40px 0">
				{% if type == 'success' %}
					<p class="alert alert-{{ type }} col-xs-6 col-xs-offset-3" style="background: rgba(0, 255, 0, 0.7); color: white;">{{ message }}</p>
					<a class="col-xs-12" style="text-align: center;" href="{{ url('contact') }}">Retour</a>
				{% elseif type == 'danger' %}
					<p class="alert alert-{{ type }} col-xs-6 col-xs-offset-3" style="background: rgba(255, 0, 0, 0.7); color: white;">{{ message }}</p>
					<a class="col-xs-12" style="text-align: center;" href="{{ url('contact') }}">Retour</a>
				{% endif %}
			</div>
		{% endif %}

		{% if type is not defined or type == 'danger'%}
			<div class="row" style="margin: 20px 0; box-shadow: 0px 3px 5px black; background: rgb(90, 90, 110); padding: 40px 0">
				<h2 style="text-align: center; font-size: 3em; margin-right: 20px; color: rgb(20, 20, 40); color: white">Feedback</h2>
				<form action="{{ url('feedback') }}" method="POST" class="col-md-8 col-md-offset-2">
					<div class="form-group">
						<label style="color: white">Your Name:</label>
						<input type="text" name="name" class="form-control"><br/><br/>
					</div>

					<div class="form-group">
						<label style="color: white">Your Email</label>
						<input name="email" type="email" class="form-control"><br/><br/>
					</div>
					
					<button class="btn btn-primary">Envoyer</button>
				</form>
			</div>
		{% endif %}
	</div>
{% endblock %}