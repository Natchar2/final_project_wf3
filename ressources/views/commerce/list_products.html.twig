{% extends 'defaultLayout.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	  <link rel="stylesheet" href="https://cdn.datatables.net/1.10.15/css/jquery.dataTables.min.css">
{% endblock %}

{% block contenu %}

	<div class="row">
		{% if delete is defined %}
			<div class="alert alert-danger" role=alert>
					<p>Vous n'avez pas encore de produits à afficher{{ success }}</p>
				</div>	
		{% endif %}
		{% if products is defined %}
		<table class="table table-bordered table-striped table-hover table-condensed table-responsive" id="myTable">
            <thead>
              <tr>
                <th>
                  Numéro du produit
                </th>
                <th>
                  Nom ou Modèle
                </th>
                <th>
                  Marque
                </th>
                <th>
                  Catégorie
                </th>
                <th>
                  Sous-Catégorie
                </th>
                <th>
                  Prix
                </th>
                <th>
                  Frais de livraisons
                </th>
                <th>
                  Description
                </th>
                <th>
                  Image 1
                </th>
                <th>
                  Image 2
                </th>
                <th>
                  Image 3
                </th>
                <th>
                  Date de création
                </th>
                <th>
                  Numéro de colis
                </th>
                <th>
                  Action
                </th>
              </tr>
            </thead>
            <tbody>
	            <tr>
	                  <td>
	                    {{products.ID_product}}
	                 </td>
				</tr>
				<tr>
	                  <td>
	                    {{products.name}}
	                 </td>
				</tr>
				<tr>
	                  <td>
	                    {{products.brand}}
	                 </td>
				</tr>
				<tr>
	                  <td>
	                    {{products.category_name}}
	                 </td>
				</tr>
				<tr>
	                  <td>
	                    {{products.sub_category}}
	                 </td>
				</tr>
				<tr>
	                  <td>
	                    {{products.price}}
	                 </td>
				</tr>
				<tr>
	                  <td>
	                    {{products.shipping_charges}}
	                 </td>
				</tr>
				<tr>
	                  <td>
	                    {{products.description}}
	                 </td>
				</tr>
				<tr>
	                  <td>
	                    {{products.image_1}}
	                 </td>
				</tr>
				<tr>
	                  <td>
	                    {{products.image_2}}
	                 </td>
				</tr>
				<tr>
	                  <td>
	                    {{products.image_3}}
	                 </td>
				</tr>
				<tr>
	                  <td>
	                    {{products.creation_date}}
	                 </td>
				</tr>
				<tr>
	                  <td>
	                    {{products.tracking_number}}
	                 </td>
				</tr>
				<tr>
	                  <td>
	                    <a href="{{ url('deleteProduct',{'ID_product' : products.ID_product,'token' :  app.session.get('token')} ) }}" onclick="return confirm('êtes vous sûr ??')" class="btn btn-danger">Suppr.</a>
					      {# <input type="hidden" name="edit_id" value="{{products.ID_product}}">#}
					     <a href="{{ url('view_newAd',,{'ID_product' : products.ID_product}) }}" class="btn btn-warning">Modifier</a>
	                 </td>
				</tr>
			</tbody>
	       </table>
	   {% elseif %}
			
				<div class="alert alert-waring" role=alert>
					<p>Vous n'avez pas encore de produits à afficher</p>
				</div>		

	   {% endif %}
	</div>


{% endblock %}

{% block javascripts %}
	{{ parent() }}

	<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
	<script> 
	$('#myForm').validate();
	</script>
	<script>
		$(document).ready(function(){
			$('#myTable').DataTable({
			  "language":{
			    "url": "https://cdn.datatables.net/plug-ins/1.10.15/i18n/French.json"
			  }
			});
		});
	</script>
{% endblock %}
 