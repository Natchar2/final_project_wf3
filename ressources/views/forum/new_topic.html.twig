{% extends 'defaultLayout.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{asset('css/ajoutArticle.css')}}">
{% endblock %}

{% block contenu %}
<div class="container headerNewTopic contactFooter">	
	<div class="row">
		<div class="col-md-12">

			{% if  errors is defined and errors is not empty  %}
				<div class="alert alert-danger" role=alert>
					{% for value in errors %}

						<p>{{value}}</p><br>

					{% endfor %}
				</div><br>
			{% endif %}

			{% if success is defined %}
				<div class="alert alert-success" role=alert>
					<p>{{ success }}</p>
				</div><br>
			{% endif %}

			<form action=""  class="form-horizontal itemForm" method="POST" enctype="multipart/form-data">
				<fieldset>
					<legend>Publier un nouveau topic</legend>

					<!-- nom et marque -->
					<div class="form-group">
						<label class="col-md-4 control-label">Titre</label>
						<div class="col-md-4">
							<input class="form-control input-md" type="text" name="title" required>
						</div>
					</div>

					<!-- Categorie -->
					<div class="form-group">
						<label class="col-md-4 control-label">
							Cat√©gorie
						</label>
						<div class="col-md-4">
							<select name="category" class="form-control" required>
								{% for value in categories %}

									<option value="{{value.ID_category}}">{{value.category_name}}</option>

								{% endfor %}
							</select>
						</div>
					</div>
					
					<div class="form-group">
						<div class="col-md-4">
							<input type="hidden" name="token" value="{{app.session.get('token')}}">
							<button  type="submit" class="btn btn-primary">Ajouter</button>
						</div>
					</div>
				</fieldset>
			</form>

		</div>
	</div>
</div>



{% endblock %}

{% block footer %}
	{% include 'commerce/footer.html.twig' %}
{% endblock %}

{% block javascripts %}
	<script src="{{asset('dist/js/bootstrap.min.js')}}"></script>
	{{parent()}}
	
{% endblock %}